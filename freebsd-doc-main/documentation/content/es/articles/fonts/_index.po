"% ex fonts.dir\n"
":1p\n"
"25\n"
":1c\n"
"26\n"
".\n"
":$a\n"
"showboat.pfb -type1-showboat-medium-r-normal-decorative-0-0-0-0-p-0-iso8859-1\n"
